// 真实价格与划线价格
function mainPrice(price, discountPrice) {
  if(!discountPrice){
    return {
      price:price,
      display:true
    }
  }
  else{
    return {
      display:true,
      price:discountPrice,
    }
  }
}

function shortagePrice(price, discountPrice) {
  if(!discountPrice){
    return {
      mainprice:price,
      discountPrice:null
    }
  }
  else{
    return {
      mainprice:discountPrice,
      discountPrice:price
    }
  }
}

function slashedPrice(price, discountPrice) {
    if(discountPrice){
        return {
            display:true,
            price:price
        }
    }else{
        return {
            display:false,
            price:null
        }
    }
}

module.exports = {
    mainPrice:mainPrice,
    slashedPrice:slashedPrice,
  shortagePrice:shortagePrice
}
